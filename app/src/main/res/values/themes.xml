<resources xmlns:tools="http://schemas.android.com/tools">
	<style name="Main" parent="Theme.Material3.DayNight.NoActionBar">
		<item name="colorPrimary">@color/brand_primary</item>
		<item name="colorOnPrimary">@color/brand_colorOnPrimary</item>
		<item name="colorOnSecondaryContainer">@color/brand_colorOnSecondaryContainer</item>
		<item name="colorSurface">@color/brand_colorSurface</item>
		<item name="colorOnSurfaceVariant">@color/brand_colorOnSurfaceVariant</item>
		<item name="colorOnSurface">@color/brand_colorOnSurface</item>
		
		<item name="popupMenuBackground">@drawable/popup</item>
		<item name="textAppearanceTitleSmall">@style/Navigation</item>
		
		<item name="android:colorBackground">@color/brand_colorSurface</item>
		<item name="android:colorEdgeEffect">@color/brand_colorSecondary</item>
		<item name="android:statusBarColor">@color/brand_colorSurface</item>
		<item name="android:windowLightStatusBar">true</item>
	</style>
	
	<style name="Navigation">
		<item name="android:textSize">14sp</item>
	</style>
	
	<style name="Dropdown" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
		<item name="android:textColor">@color/brand_colorOnSurface</item>
	</style>
	
	<style name="Opening" parent="Main">
		<item name="android:windowBackground">@drawable/splash_screen</item>
	</style>
</resources>