<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Main" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">#2979FF</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">#B300FF</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="popupMenuBackground">@drawable/popup</item>
        <item name="textAppearanceLargePopupMenu">@style/PopupText</item>
        <item name="textAppearanceSmallPopupMenu">@style/PopupText</item>
    </style>
    <style name="Dialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurface">@color/background</item>
    </style>
    <style name="PopupText" parent="Dark">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="colorSurface">@color/divider</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Dark" parent="Main">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>
    <style name="Opening" parent="Main">
        <item name="android:windowBackground">@color/background</item>
    </style>
</resources>
