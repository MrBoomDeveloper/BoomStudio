	<style name="Popup">
		<item name="android:textSize">14sp</item>
	</style>
	
	<style name="Dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"></style>
	
	<style name="Opening" parent="Main">
