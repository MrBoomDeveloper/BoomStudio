<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="header">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/header_height</item>
		<item name="android:elevation">8dp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingLeft">@dimen/header_padding</item>
		<item name="android:paddingRight">@dimen/header_padding</item>
	</style>
	<style name="header_item">
		<item name="android:layout_width">@dimen/header_item</item>
		<item name="android:layout_height">@dimen/header_item</item>
		<item name="android:padding">@dimen/header_item_padding</item>
	</style>
	<style name="header_item.clickable">
		<item name="android:background">@drawable/ripple_circle</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
	</style>
	<style name="header_item.main">
		<item name="android:layout_width">@dimen/header_height</item>
	</style>
	<style name="header_item.main.clickable">
		<item name="android:background">@drawable/ripple_circle</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
	</style>
	<style name="header_title">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_marginLeft">@dimen/header_padding</item>
		<item name="android:textColor">@color/view_first</item>
		<item name="android:fontFamily">sans-serif-medium</item>
		<item name="android:textSize">@dimen/header_title</item>
	</style>
	<style name="textinput">
		<item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/view_second</item>
	</style>
	<style name="textinput.edit" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />
	<style name="textinput.drop" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu" />
	<style name="textinput_content">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:singleLine">true</item>
		<item name="android:textColor">@color/view_first</item>
	</style>
	<style name="textinput_content.drop">
		<item name="android:dropDownSelector">?attr/selectableItemBackground</item>
		<item name="android:inputType">none</item>
		<item name="android:textColorHint">@color/view_second</item>
	</style>
</resources>