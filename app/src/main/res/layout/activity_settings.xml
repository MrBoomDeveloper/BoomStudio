<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/header_padding"
        android:paddingRight="@dimen/header_padding">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/header_item"
            android:layout_height="@dimen/header_item"
            android:background="@drawable/ripple_circle"
            android:clickable="true"
            android:contentDescription="@string/action_back"
            android:focusable="true"
            android:padding="@dimen/header_item_padding"
            android:tooltipText="@string/action_back"
            app:srcCompat="@drawable/ic_outline_arrow_back_24"
            tools:srcCompat="@drawable/ic_outline_arrow_back_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:text="@string/menu_settings"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/prefs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

</LinearLayout>