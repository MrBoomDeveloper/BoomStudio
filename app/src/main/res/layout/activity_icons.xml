<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_launcher_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/header_padding"
        android:paddingRight="@dimen/header_padding">

        <ImageView
            android:layout_width="@dimen/header_item"
            android:layout_height="@dimen/header_item"
            android:background="@drawable/ripple_circle"
            android:clickable="true"
            android:contentDescription="@string/action_menu"
            android:focusable="true"
            android:padding="@dimen/header_item_padding"
            app:srcCompat="@drawable/ic_outline_arrow_back_24"
            tools:srcCompat="@drawable/ic_outline_arrow_back_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:text="@string/menu_icons"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/search"
            android:layout_width="@dimen/header_item"
            android:layout_height="@dimen/header_item"
            android:background="@drawable/ripple_circle"
            android:clickable="true"
            android:contentDescription="@string/action_search"
            android:focusable="true"
            android:padding="@dimen/header_item_padding"
            app:srcCompat="@drawable/ic_outline_search_24"
            tools:srcCompat="@drawable/ic_outline_search_24" />

        <ImageView
            android:layout_width="@dimen/header_item"
            android:layout_height="@dimen/header_item"
            android:background="@drawable/ripple_circle"
            android:clickable="true"
            android:contentDescription="@string/action_sort"
            android:focusable="true"
            android:padding="@dimen/header_item_padding"
            app:srcCompat="@drawable/ic_outline_sort_24"
            tools:srcCompat="@drawable/ic_outline_sort_24" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>