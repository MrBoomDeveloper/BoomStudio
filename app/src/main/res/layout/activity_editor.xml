<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_launcher_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/menu"
            android:padding="15dp"
            app:srcCompat="@drawable/ic_outline_menu_24"
            tools:srcCompat="@drawable/ic_outline_menu_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:text="@string/editor"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/create"
            android:focusable="true"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_outline_add_24"
            tools:srcCompat="@drawable/ic_outline_add_24" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/notifications"
            android:focusable="true"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_outline_notifications_24"
            tools:srcCompat="@drawable/ic_outline_notifications_24" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/settings"
            android:focusable="true"
            android:padding="15dp"
            app:srcCompat="@drawable/ic_outline_settings_24"
            tools:ignore="DuplicateSpeakableTextCheck"
            tools:srcCompat="@drawable/ic_outline_settings_24" />
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerColor="@color/divider" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerColor="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>